<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextArea?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.loghorrean.veganShop.controllers.dialog.CategoryController">
   <content>
      <GridPane>
          <Label text="Название категории" />
          <TextField fx:id="catName" GridPane.columnIndex="1" />
          <Label text="Описание категории" GridPane.rowIndex="1" />
          <TextArea fx:id="catDesc" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      </GridPane>
   </content>
</DialogPane>
