<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.loghorrean.veganShop.controllers.dialogControllers.ChangeMainInfoController"
            prefHeight="200" prefWidth="300">
    <content>
        <GridPane alignment="CENTER" vgap="10" hgap="10">
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0"
                text="Никнейм"/>
            <TextField fx:id="username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="0"
                text="Эл. почта"/>
            <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label GridPane.rowIndex="2" GridPane.columnIndex="0"
                text="Имя"/>
            <TextField fx:id="firstname" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label GridPane.rowIndex="3" GridPane.columnIndex="0"
                text="Фамилия"/>
            <TextField fx:id="lastname" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label GridPane.rowIndex="4" GridPane.columnIndex="0"
                text="Телефон"/>
            <TextField fx:id="phone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
