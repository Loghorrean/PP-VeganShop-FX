<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<DialogPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.loghorrean.veganShop.controllers.dialog.ProductsToCustomController">
   <content>
      <GridPane prefWidth="266.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Выберите категорию" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
             <ComboBox fx:id="prodCat" prefWidth="150.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Выберите продукт" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
             <ComboBox fx:id="product" prefWidth="150.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Количество продукта" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
             <TextField fx:id="prodAmount" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Рецепт готовки" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
             <TextArea fx:id="prodRecipe" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
         </children>
      </GridPane>
   </content>
</DialogPane>
