<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.loghorrean.veganShop.controllers.client.orderCon.HistoryController"
            prefHeight="500.0" prefWidth="900.0">
    <left>
        <ListView fx:id="mainListView"/>
    </left>
    <center>
        <VBox fx:id="mainVBox">
            <TextArea fx:id="mainTextArea" editable="false"/>
            <Button fx:id="repeatOrder" text="Повторить заказ"/>
        </VBox>
    </center>
</BorderPane>
