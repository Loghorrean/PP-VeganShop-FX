<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.loghorrean.veganShop.controllers.admin.AdminCategoriesInTemplateController">
    <left>
        <ListView fx:id="mainListView" />
    </left>
    <center>
        <VBox>
            <GridPane fx:id="testGrid" gridLinesVisible="true">
            <columnConstraints>
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            </GridPane>
            <Button fx:id="saveButton" text="Сохранить изменения" onAction="#saveChanges"/>
            <Button fx:id="redirectToTemplates" text="Перейти на страницу блюд" onAction="#goToTemplates"/>
        </VBox>
    </center>
</BorderPane>
